# Nginx Load Balancer Configuration

upstream mycluster {
    {% for server in nginx_lb_backend_servers | default([]) %}
    server {{ server }}:80 weight=5;
    {% endfor %}
    {% if nginx_lb_backend_servers is not defined or nginx_lb_backend_servers | length == 0 %}
    # Use dynamic host entries from /etc/hosts managed by Ansible block
    {% for host in groups['web_servers'] | map('extract', hostvars) | list %}
    server {{ host.ansible_host }}:80 weight=5;
    {% endfor %}
    {% endif %}
}

server {
    listen 80;
    server_name {{ nginx_lb_server_name | default('_') }};

    location / {
        proxy_pass http://mycluster;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_log /var/log/nginx/error.log;
    access_log /var/log/nginx/access.log;
}
